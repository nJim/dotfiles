#!/usr/bin/env bash

# Save Homebrew's installed location.
brew_prefix=$(brew --prefix)

check_brew_path()
{
  local formulae=$1
  echo $PATH | grep -v "${brew_prefix}\/opt\/${formulae}\/" &>/dev/null && export PATH="${brew_prefix}/opt/${formulae}/libexec/gnubin:$PATH"
}

# brew install coreutils
  check_brew_path "coreutils"
# brew install findutils
  check_brew_path "findutils"
# brew install gnu-sed
  check_brew_path "gnu-sed"
# brew install grep
  check_brew_path "grep"

unset check_brew_path
unset brew_prefix

